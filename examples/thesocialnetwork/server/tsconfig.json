{
  "compilerOptions": {
    "outDir": "dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "module": "esnext",
    "target": "es2018",
    "lib": ["es6", "esnext", "es2015", "dom"],

    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "strict": true,

    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs"
    }
  }
}
